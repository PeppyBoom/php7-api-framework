{
    "name": "afridlund85/api",
    "version": "0.0.2",
    "description": "API framework for PHP7",
    "license": "MIT",
    "keywords": [
        "PHP7",
        "API framework"
    ],
    "authors": [
        {
            "name": "Andreas Fridlund",
            "email": "afridlund85@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.2",
        "phpunit/php-code-coverage": "^3",
        "squizlabs/php_codesniffer": "2.*",
        "guzzlehttp/guzzle": "^6.1"
    },
    "autoload": {
        "psr-4": {
            "Asd\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test",
            "Test\\Unit\\": "test/unit",
            "Test\\Integration\\": "test/integration",
            "Test\\System\\": "test/system"
        }
    },
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php --testsuite All",
        "unit": "phpunit --bootstrap vendor/autoload.php --testsuite Unit",
        "integration": "phpunit --bootstrap vendor/autoload.php --testsuite Integration",
        "system": "phpunit --bootstrap vendor/autoload.php --testsuite System",
        "coverage" : "phpdbg -qrr vendor/bin/phpunit --coverage-html coverage"
    }
}
